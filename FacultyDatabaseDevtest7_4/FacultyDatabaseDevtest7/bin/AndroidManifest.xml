<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhinav.facultydatabasedev"
    android:versionCode="3"
    android:versionName="1.1.3" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchActivity" />

        <activity
            android:name="com.abhinav.facultydatabasedev.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.FacultyList"
            android:label="@string/title_activity_display__spinner__info"
            android:parentActivityName="com.abhinav.facultydatabasedev.MainActivity" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchActivity" />
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.Case0"
            android:label="@string/title_activity_case0" >
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.FacultyDetails"
            android:label="@string/title_activity_clickone" >
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.Clicktwo"
            android:label="@string/title_activity_clicktwo" >
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.SearchAcitvity"
            android:label="@string/title_activity_search_acitvity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.abhinav.facultydatabasedev.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.abhinav.facultydatabasedev.MainActivity" />
        </activity>
        <activity
            android:name="com.abhinav.facultydatabasedev.Display_Dev_Info"
            android:label="@string/title_activity_display__dev__info" >
        </activity>
    </application>

</manifest>
